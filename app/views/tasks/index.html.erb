<div class="main">
<h1>TO DO LIST</h1>
<h2>Listagem de Tasks</h2>
<table id="customers">
        <thead>
                <tr>
                        <th>Title</th>
                        <th>Description</th>
			<th>Due</th>
			<th>Done</th>			
                        <th colspan="3">Actions</th>
                </tr>
        </thead>
        <tbody>
                <% @tasks.each do |task| %>
                        <tr>
                                <td><%= task.title %></td>
                                <td><%= task.description %></td>
				<td><%= task.due %></td>
				<td><%= task.done %></td>
                                <td><%= link_to 'Show', task %></td>
                                <td><%= link_to 'Edit', edit_task_path(task) %></td>
                                <td><%= link_to 'Delete', task, method: :delet, data: {confirm: 'Tem certeza?'} %></td>
                        </tr>
                <% end %>
        </tbody>
</table>
<br/>
<%= link_to 'New Post', new_task_path %>
</div>
